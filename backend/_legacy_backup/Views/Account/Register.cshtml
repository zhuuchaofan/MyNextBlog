@{
    ViewData["Title"] = "注册管理员";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="text-center mb-4 fw-bold">注册新账号</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger p-2 small">@ViewBag.Error</div>
                }

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label small text-muted">用户名</label>
                        <input name="username" class="form-control" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label small text-muted">密码</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100 mb-3">立即注册</button>

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none small text-muted">已有账号？去登录</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>