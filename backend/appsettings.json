{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/blog.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3001",
      "https://nextblog.zhuchaofan.online"
    ]
  },
  "CloudflareR2": {
    "ServiceUrl": "https://<your-account-id>.r2.cloudflarestorage.com",
    "AccessKey": "YOUR_ACCESS_KEY_HERE",
    "SecretKey": "YOUR_SECRET_KEY_HERE",
    "BucketName": "your-bucket-name",
    "PublicDomain": "https://your-domain.com"
  },
  "JwtSettings": {
    "SecretKey": "YOUR_VERY_STRONG_SECRET_KEY_HERE_AT_LEAST_32_CHARS",
    "Issuer": "MyNextBlogServer",
    "Audience": "MyNextBlogClient"
  }
}