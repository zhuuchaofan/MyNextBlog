{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/blog.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "ReplaceThisWithAStrongSecretKeyAtLeast32BytesLong!",
    "Issuer": "MyNextBlog",
    "Audience": "MyNextBlogUser",
    "ExpirationInMinutes": 10080
  },
  "SpamKeywords": [
    "casino",
    "viagra",
    "buy",
    "free",
    "click here",
    "http",
    "https",
    "www",
    ".com"
  ],
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "SenderEmail": "tokyiopig@gmail.com",
    "SenderPassword": "", 
    "EnableSsl": true,
    "AdminEmail": "tokyiopig@gmail.com"
  }
}