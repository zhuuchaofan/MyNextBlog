@model MyNextBlog.Models.Post

@{
    ViewData["Title"] = "撰写新文章";
    ViewData["HideFooter"] = true;
}

<div class="mb-3 mt-3">
    <a href="javascript:history.back()" class="text-decoration-none text-muted small">
        <i class="bi bi-arrow-left"></i> 返回
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card card-modern p-4 p-md-5">
            <form asp-action="Create" id="createForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <input asp-for="Title" class="form-control border-0 fs-2 fw-bold px-0 py-2 bg-transparent shadow-none" placeholder="请输入文章标题..." />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                    <div class="border-bottom w-25 mt-2" style="border-color: var(--brand-color) !important; border-width: 3px !important;"></div>
                </div>
                
                <div class="row mb-4 align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <select asp-for="CategoryId" id="categorySelect" class="form-select border-0 bg-light fw-bold rounded-start-pill px-3"
                                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">-- 选择分类 --</option>
                            </select>
                            <button type="button" class="btn btn-light border-0 rounded-end-pill text-primary" id="btnAddCategory" title="新建分类">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="IsHidden" id="flexSwitchCheckDefault">
                            <label class="form-check-label text-muted small" for="flexSwitchCheckDefault">
                                <i class="bi bi-eye-slash me-1"></i> 隐藏此文章 (仅管理员可见)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="text-muted small mb-4 pb-3 border-bottom">
                    <i class="bi bi-pen me-1"></i> 新文章草稿
                </div>

                <div class="form-group mb-5">
                    <textarea asp-for="Content"
                              class="form-control border-0 px-0 shadow-none lh-lg font-monospace markdown-editor"
                              rows="20"
                              placeholder="# 在这里开始创作...&#10;&#10;- 风格统一了&#10;- 写作体验会更流畅"
                              style="resize: none;"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div style="height: 60px;"></div>
        </form>
    </div>
</div>
</div>

<div class="fixed-bottom bg-white bg-opacity-90 border-top py-3 backdrop-blur">
    <div class="container-md" style="max-width: 800px;">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <small class="text-muted d-none d-sm-inline">
                    <i class="bi bi-markdown me-1"></i>支持 Markdown
                </small>
                <!-- 隐藏的文件选择框 -->
                <input type="file" id="imageUploadInput" accept="image/*" style="display: none;">
                <!-- 可见的上传按钮 -->
                <button type="button" class="btn btn-link text-decoration-none text-secondary p-0" id="uploadBtn" title="插入图片">
                    <i class="bi bi-image"></i> <span class="d-none d-sm-inline">插入图片</span>
                </button>
            </div>
            <div>
                <a href="javascript:history.back()" class="btn btn-light btn-sm me-2 rounded-pill px-3">取消</a>
                <button type="submit" form="createForm" class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm">
                    <i class="bi bi-send me-1"></i> 发布
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.getElementById('btnAddCategory').addEventListener('click', async () => {
            const { value: categoryName } = await Swal.fire({
                title: '新建分类',
                input: 'text',
                inputLabel: '请输入分类名称',
                inputPlaceholder: '例如：Vue.js 学习笔记',
                showCancelButton: true,
                confirmButtonText: '创建',
                cancelButtonText: '取消',
                inputValidator: (value) => {
                    if (!value) {
                        return '分类名称不能为空！';
                    }
                }
            });

            if (categoryName) {
                try {
                    const response = await fetch('/api/categories', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ name: categoryName })
                    });

                    const result = await response.json();

                    if (response.ok && result.success) {
                        // 创建成功：添加到下拉框并选中
                        const select = document.getElementById('categorySelect');
                        const option = new Option(result.category.name, result.category.id);
                        select.add(option);
                        select.value = result.category.id;

                        Swal.fire({
                            icon: 'success',
                            title: '创建成功',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    } else {
                        Swal.fire('错误', result.message || '创建失败', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('错误', '网络请求失败', 'error');
                }
            }
        });
    </script>
}