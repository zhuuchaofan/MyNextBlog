@{
    ViewData["Title"] = "管理员登录";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="text-center mb-4 fw-bold">管理员登录</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger p-2 small">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label small text-muted">用户名</label>
                        <input name="username" class="form-control" />
                    </div>
                    <div class="mb-4">
                        <label class="form-label small text-muted">密码</label>
                        <input name="password" type="password" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">登录</button>
                    <div class="text-center mt-3">
                        <a asp-action="Register" class="text-decoration-none small text-muted">还没有账号？去注册</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>