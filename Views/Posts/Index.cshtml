@model IEnumerable<MyTechBlog.Models.Post>

@{
    ViewData["Title"] = "最新文章";
}

<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <h4 class="fw-bold text-dark mb-0">最新文章</h4>
    @if (User.IsInRole("Admin"))
    {
    <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3">
        <i class="bi bi-pencil-fill me-1"></i> 写新文章
    </a>
    }
</div>

<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model.OrderByDescending(p => p.CreateTime))
        {
            <div class="card mb-3 border-0 shadow-sm rounded-3 bg-light bg-opacity-25">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-md-9">
                            <h5 class="card-title fw-bold mb-1">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-dark text-decoration-none stretched-link">
                                    @item.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted small mb-2 text-truncate">
                                @if (!string.IsNullOrEmpty(item.Content))
                                {
                                    var plainText = System.Text.RegularExpressions.Regex.Replace(item.Content, "[#*`>]", "");
                                    @(plainText.Length > 80 ? plainText.Substring(0, 80) + "..." : plainText)
                                }
                            </p>
                            <div class="text-muted" style="font-size: 0.75rem;">
                                @if (item.Category != null)
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary me-2">
                                        @item.Category.Name
                                    </span>
                                }
                                <i class="bi bi-calendar3 me-1"></i> @item.CreateTime.ToString("yyyy/MM/dd")
                                <span class="mx-2">|</span>
                                <i class="bi bi-chat-dots me-1"></i> @(item.Comments?.Count ?? 0) 评论
                            </div>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="col-md-3 text-end position-relative" style="z-index: 2;">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm" title="编辑">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                    class="btn btn-outline-danger btn-sm"
                                    title="删除"
                                    onclick="openDeleteModal(@item.Id, '@item.Title')"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>确认删除</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="mb-0">你确定要删除文章 <strong id="deletePostTitle" class="text-danger"></strong> 吗？</p>
                <p class="text-muted small mt-2">此操作无法撤销，评论也会一并被删除。</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">取消</button>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" id="deletePostId" />
                    <button type="submit" class="btn btn-danger">确认删除</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(id, title) {
        // 1. 把 ID 填入隐藏的 input 框
        document.getElementById('deletePostId').value = id;
        // 2. 把 标题 填入提示文字里
        document.getElementById('deletePostTitle').innerText = title;
    }
</script>