@model IEnumerable<MyTechBlog.Models.Post>

@{
    ViewData["Title"] = "最新文章";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3 flex-wrap gap-2">
    <h4 class="fw-bold text-dark mb-0">
        @if (ViewData["CurrentSearch"] != null)
        {
            <span><i class="bi bi-search me-1"></i> 搜索结果："@ViewData["CurrentSearch"]"</span>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill ms-2" style="font-size: 0.8rem;">
                <i class="bi bi-x-lg"></i> 清除
            </a>
        }
        else if (ViewData["CurrentCategory"] != null)
        {
            <span>分类：@ViewData["CurrentCategory"]</span>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill ms-2" style="font-size: 0.8rem;">
                <i class="bi bi-x-lg"></i> 清除筛选
            </a>
        }
        else
        {
            <span>最新文章</span>
        }
    </h4>
    @if (User.IsInRole("Admin"))
    {
    <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3">
        <i class="bi bi-pencil-fill me-1"></i> 写新文章
    </a>
    }
</div>

<div class="row">
    <div class="col-md-10 mx-auto"> <!-- 限制最大宽度，增加留白 -->
        @foreach (var item in Model.OrderByDescending(p => p.CreateTime))
        {
            // 尝试提取第一张图片作为封面
            string coverImage = null;
            if (!string.IsNullOrEmpty(item.Content))
            {
                var match = System.Text.RegularExpressions.Regex.Match(item.Content, @"!\[.*?\]\((.*?)\)");
                if (match.Success)
                {
                    coverImage = match.Groups[1].Value;
                }
            }
            // 随机渐变色类
            var gradientClass = "gradient-" + ((item.Id % 4) + 1);
            
            <div class="card card-modern mb-5"> <!-- 增加垂直间距 mb-5 -->
                <div class="row g-0">
                    <!-- 缩略图区域：移动端在顶部，桌面端在右侧 -->
                    <div class="col-md-4 order-md-2">
                        @if (!string.IsNullOrEmpty(coverImage))
                        {
                            <div style="background-image: url('@coverImage'); background-size: cover; background-position: center; height: 100%; min-height: 240px;" class="d-none d-md-block"></div>
                            <div style="background-image: url('@coverImage'); background-size: cover; background-position: center; height: 200px;" class="d-md-none"></div>
                        }
                        else
                        {
                            <div class="post-thumbnail-placeholder @gradientClass" style="height: 100%; min-height: 240px;">
                                <i class="bi bi-flower1 text-white opacity-50 display-1"></i>
                            </div>
                        }
                    </div>
                    
                    <!-- 内容区域 -->
                    <div class="col-md-8 order-md-1">
                        <div class="card-body p-4 p-md-5 d-flex flex-column h-100 justify-content-center">
                            
                            <!-- 分类标签 -->
                            <div class="mb-3">
                                @if (item.Category != null)
                                {
                                    <a asp-action="Index" asp-route-categoryId="@item.CategoryId" class="badge-pill-soft text-decoration-none small position-relative" style="z-index: 2;">
                                        @item.Category.Name
                                    </a>
                                }
                                <span class="text-muted small ms-2">
                                    <i class="bi bi-calendar3 me-1"></i> @item.CreateTime.ToString("MMM dd, yyyy")
                                </span>
                            </div>

                            <h2 class="card-title h3 mb-3">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none stretched-link">
                                    @if (item.IsHidden)
                                    {
                                        <span class="badge bg-secondary me-2 fs-6 align-middle">Hidden</span>
                                    }
                                    @item.Title
                                </a>
                            </h2>
                            
                            <p class="card-text text-secondary mb-4 text-clamp-3" style="line-height: 1.7;">
                                @if (!string.IsNullOrEmpty(item.Content))
                                {
                                    var plainText = System.Text.RegularExpressions.Regex.Replace(item.Content, "[#*`>]", "");
                                    @(plainText.Length > 200 ? plainText.Substring(0, 200) : plainText)
                                }
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="small text-muted">
                                    <span class="me-3"><i class="bi bi-person-circle me-1"></i> @(item.User?.Username ?? "Unknown")</span>
                                    <span><i class="bi bi-chat-dots me-1"></i> @(item.Comments?.Count ?? 0) 评论</span>
                                </div>
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="position-relative" style="z-index: 2;">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-muted p-0 me-3" title="编辑">
                                            <i class="bi bi-pencil-square fs-5"></i>
                                        </a>
                                        <button type="button" class="btn btn-link text-danger p-0" 
                                                onclick="openDeleteModal(@item.Id, '@item.Title')"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" title="删除">
                                            <i class="bi bi-trash fs-5"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>确认删除</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="mb-0">你确定要删除文章 <strong id="deletePostTitle" class="text-danger"></strong> 吗？</p>
                <p class="text-muted small mt-2">此操作无法撤销，评论也会一并被删除。</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">取消</button>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" id="deletePostId" />
                    <button type="submit" class="btn btn-danger">确认删除</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(id, title) {
        // 1. 把 ID 填入隐藏的 input 框
        document.getElementById('deletePostId').value = id;
        // 2. 把 标题 填入提示文字里
        document.getElementById('deletePostTitle').innerText = title;
    }
</script>