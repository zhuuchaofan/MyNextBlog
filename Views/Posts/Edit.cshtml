@model MyTechBlog.Models.Post

@{
    ViewData["Title"] = "编辑文章";
}

<div class="mb-3 mt-3">
    <a href="javascript:history.back()" class="text-decoration-none text-muted small">
        <i class="bi bi-arrow-left"></i> 返回
    </a>
</div>

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreateTime" />

            <div class="form-group mb-2">
                <input asp-for="Title" class="form-control border-0 fs-2 fw-bold px-0 py-2 bg-transparent shadow-none" placeholder="文章标题" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>
            <div class="form-group mb-4">
                <select asp-for="CategoryId" class="form-select border-0 bg-light fw-bold"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                    <option value="">-- 选择分类 --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="text-muted small mb-4 pb-3 border-bottom d-flex align-items-center">
                <span class="me-3">
                    <i class="bi bi-calendar3 me-1"></i> 发布于: @Model.CreateTime.ToString("yyyy/MM/dd HH:mm")
                </span>
                <span class="badge bg-light text-secondary border">编辑模式</span>
            </div>

            <div class="form-group mb-5">
                <textarea asp-for="Content"
                          class="form-control border-0 px-0 shadow-none lh-lg font-monospace markdown-editor"
                          rows="20"
                          placeholder="开始写作... (支持 Markdown)"
                          style="resize: none;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="fixed-bottom bg-white bg-opacity-75 border-top py-3">
                <div class="container-md" style="max-width: 800px;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <small class="text-muted">
                                <i class="bi bi-markdown me-1"></i>支持 Markdown
                            </small>
                            <!-- 隐藏的文件选择框 -->
                            <input type="file" id="imageUploadInput" accept="image/*" style="display: none;">
                            <!-- 可见的上传按钮 -->
                            <button type="button" class="btn btn-link text-decoration-none text-secondary p-0" id="uploadBtn" title="插入图片">
                                <i class="bi bi-image"></i> 插入图片
                            </button>
                        </div>
                        <div>
                            <a href="javascript:history.back()" class="btn btn-light btn-sm me-2">取消</a>
                            <button type="submit" class="btn btn-primary btn-sm px-4 rounded-pill">
                                保存修改
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div style="height: 60px;"></div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}