@model MyTechBlog.Models.Post
@using MyTechBlog.Helpers

@{
    ViewData["Title"] = Model.Title;
}

<!-- 1. 顶部返回按钮 -->
<div class="mb-3 mt-3">
    <a asp-action="Index" class="text-decoration-none text-muted small">
        <i class="bi bi-arrow-left"></i> 返回列表
    </a>
</div>

<div class="row">
    <div class="col-lg-12">
        <article class="blog-post">
            <!-- 2. 文章头部信息 -->
            <header class="mb-4 pb-3 border-bottom">
                <h1 class="fw-bold text-dark mb-2">@Model.Title</h1>
                
                <!-- 分类标签 -->
                @if (Model.Category != null)
                {
                    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="text-decoration-none">
                        <span class="badge rounded-pill bg-primary mb-2">@Model.Category.Name</span>
                    </a>
                }
                
                <!-- 元数据：日期、评论数、编辑按钮 -->
                <div class="text-muted small d-flex align-items-center">
                    <span class="me-3">
                        <i class="bi bi-person-circle me-1"></i>
                        @(Model.User?.Username ?? "Unknown")
                    </span>
                    <span class="me-3">
                        <i class="bi bi-calendar3 me-1"></i>
                        @Model.CreateTime.ToString("yyyy/MM/dd HH:mm")
                    </span>
                    <span class="me-3">
                        <i class="bi bi-chat-left-text me-1"></i>
                        @(Model.Comments?.Count ?? 0) 评论
                    </span>
                    
                    <!-- 只有管理员能看到编辑按钮 -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="text-decoration-none text-secondary">
                            <i class="bi bi-pencil-square"></i> 编辑
                        </a>
                    }
                </div>
            </header>

            <!-- 3. 文章正文 (Markdown 渲染区) -->
            <div class="blog-content lh-lg mb-5 text-break">
                @Html.Raw(MarkdownHelper.Parse(Model.Content))
            </div>
        </article>
    </div>
</div>

<!-- 4. 评论区 -->
<div class="bg-light bg-opacity-50 rounded-3 p-4 mt-4">
    <div class="row">
        <div class="col-md-12">
            <h5 class="fw-bold mb-3 small text-uppercase text-muted">
                评论区 (@(Model.Comments?.Count ?? 0))
            </h5>

            <div class="mb-4">
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var comment in Model.Comments.OrderBy(c => c.CreateTime))
                        {
                            <li class="border-bottom py-2">
                                <div class="d-flex justify-content-between align-items-baseline">
                                    <strong class="text-dark small">@comment.GuestName</strong>
                                    <small class="text-muted" style="font-size: 0.75rem;">@comment.CreateTime.ToString("yyyy/MM/dd HH:mm")</small>
                                </div>
                                <p class="mb-0 mt-1 small text-secondary">@comment.Content</p>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted small mb-0">暂无评论。</p>
                }
            </div>

            <form id="commentForm">
                <input type="hidden" name="PostId" value="@Model.Id" />
                <div class="row g-2">
                    <div class="col-md-4">
                        <input type="text" name="GuestName" class="form-control form-control-sm" placeholder="昵称 (选填)">
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="Content" class="form-control form-control-sm" placeholder="写下你的想法..." required>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-sm w-100" id="btnSubmitComment">
                            <span class="spinner-border spinner-border-sm d-none me-1" role="status" aria-hidden="true"></span>
                            发送
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 5. 图片放大模态框 (Lightbox) -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl"> <!-- modal-xl 让图片尽可能大 -->
    <div class="modal-content bg-transparent border-0">
      <div class="modal-body p-0 text-center position-relative">
        <!-- 关闭按钮 -->
        <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
        <img src="" id="imageModalSrc" class="img-fluid rounded shadow-lg" alt="Zoomed Image">
      </div>
    </div>
  </div>
</div>

<!-- === Mermaid & Image Optimization Script === -->
<style>
    /* 强制 Mermaid SVG 不受容器宽度限制，保持原始尺寸 */
    /* 这对于触发 overflow-x: auto 滚动条至关重要，尤其是甘特图 */
    .mermaid svg {
        max-width: none !important;
        height: auto;
    }
</style>
<script type="module">
    import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';

    mermaid.initialize({ 
        startOnLoad: false,
        theme: 'default',
        // 禁用自动缩放，防止在移动端挤压变形，配合 overflow-x: auto 实现滚动
        securityLevel: 'loose',
        gantt: { useMaxWidth: false },
        flowchart: { useMaxWidth: false },
        sequence: { useMaxWidth: false },
        journey: { useMaxWidth: false },
        timeline: { useMaxWidth: false },
        class: { useMaxWidth: false },
        state: { useMaxWidth: false },
        er: { useMaxWidth: false },
        pie: { useMaxWidth: false }
    });

    document.addEventListener("DOMContentLoaded", async function () {
        // === A. Mermaid 渲染逻辑 ===
        const mermaidBlocks = document.querySelectorAll('code.language-mermaid');
        // ... (Mermaid 代码保持不变) ...

        // === B. 图片优化逻辑 (懒加载 + 点击放大) ===
        // ... (图片逻辑保持不变) ...
        
        // === C. 评论区 AJAX 提交逻辑 (新增) ===
        const commentForm = document.getElementById('commentForm');
        if (commentForm) {
            commentForm.addEventListener('submit', async function(e) {
                e.preventDefault(); // 阻止表单默认提交

                const btn = document.getElementById('btnSubmitComment');
                const spinner = btn.querySelector('.spinner-border');
                
                // 1. 锁定按钮，显示 Loading
                btn.disabled = true;
                spinner.classList.remove('d-none');

                // 2. 收集数据
                const formData = new FormData(commentForm);
                const data = Object.fromEntries(formData.entries());
                // 转换 Key 大小写以匹配 DTO (虽然 AspNetCore 通常不区分，但保持一致是个好习惯)
                // 这里 input name 已经是 PascalCase 了，直接用即可

                try {
                    // 3. 发送 API 请求
                    const response = await fetch('/api/comments', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();

                    if (response.ok && result.success) {
                        // 4. 成功：动态插入新评论
                        const commentList = document.querySelector('.list-unstyled');
                        const emptyTip = document.querySelector('.text-muted.small.mb-0'); // "暂无评论" 提示

                        // 如果之前是暂无评论，先隐藏它
                        if (emptyTip && emptyTip.textContent.includes('暂无评论')) {
                            emptyTip.style.display = 'none';
                        }
                        
                        // 如果列表不存在（第一条评论），先创建列表容器
                        let listContainer = commentList;
                        if (!listContainer) {
                            listContainer = document.createElement('ul');
                            listContainer.className = 'list-unstyled mb-0';
                            document.querySelector('.mb-4').appendChild(listContainer);
                        }

                        // 构建 HTML
                        const newCommentHtml = `
                            <li class="border-bottom py-2 animate__animated animate__fadeIn">
                                <div class="d-flex justify-content-between align-items-baseline">
                                    <strong class="text-dark small">${result.comment.guestName}</strong>
                                    <small class="text-muted" style="font-size: 0.75rem;">${result.comment.createTime}</small>
                                </div>
                                <p class="mb-0 mt-1 small text-secondary">${result.comment.content}</p>
                            </li>
                        `;
                        
                        // 插入到列表末尾
                        listContainer.insertAdjacentHTML('beforeend', newCommentHtml);

                        // 清空输入框
                        commentForm.querySelector('input[name="Content"]').value = '';
                        
                        // 成功提示
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        Toast.fire({
                            icon: 'success',
                            title: '评论发布成功'
                        });
                        
                        // 更新评论计数 (可选优化)
                        const countBadge = document.querySelector('h5.text-uppercase');
                        if(countBadge) {
                             const currentCount = parseInt(countBadge.textContent.match(/\d+/) || 0);
                             countBadge.textContent = `评论区 (${currentCount + 1})`;
                        }

                    } else {
                        Swal.fire('发送失败', result.message || '未知错误', 'error');
                    }
                } catch (error) {
                    console.error('评论提交错误:', error);
                    Swal.fire('网络错误', '无法连接到服务器', 'error');
                } finally {
                    // 5. 解锁按钮
                    btn.disabled = false;
                    spinner.classList.add('d-none');
                }
            });
        }
    });
</script>