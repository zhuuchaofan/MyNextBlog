<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 球球布丁的后花园</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/MyTechBlog.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm mb-4 py-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">球球布丁的后花园</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Posts" asp-action="Index">
                                <i class="bi bi-journal-code me-1"></i> 技术博客
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="bi bi-images me-1"></i> 猫咪相册
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="bi bi-chat-quote me-1"></i> 碎碎念
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="bi bi-archive me-1"></i> 归档
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">关于铲屎官</a>
                        </li>

                    </ul>
                    
                    <form class="d-flex mx-3" role="search" action="#" method="get">
                        <div class="input-group">
                            <input class="form-control border-end-0" type="search" placeholder="搜索..." aria-label="Search">
                            <button class="btn btn-outline-secondary border-start-0 bg-white" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted small mt-1">
                                    你好, @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger">管理员</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">注销</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">登录</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-md flex-grow-1" style="max-width: 800px;">
        <main role="main" class="pb-5"> @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted bg-light mt-auto">
        <div class="container py-3">
            <div class="row align-items-center">

                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">
                        &copy; 2025 - <strong>球球布丁的后花园</strong>
                        <span class="mx-2">|</span>
                        <small>Powered by .NET 10 and ASP.NET Core</small>
                    </p>
                </div>

                <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                    <a href="https://github.com/" target="_blank" class="text-secondary text-decoration-none me-3"
                        title="GitHub">
                        <i class="bi bi-github fs-5"></i>
                    </a>

                    <a href="mailto:zhuuchaofan@gmail.com" class="text-secondary text-decoration-none me-3"
                        title="联系我">
                        <i class="bi bi-envelope-fill fs-5"></i>
                    </a>

                    <a href="#" class="text-secondary text-decoration-none"
                        title="RSS 订阅">
                        <i class="bi bi-rss-fill fs-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1060">
        <div id="liveToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-bold">
                    <!-- Message will be injected here -->
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- 图片压缩库 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/compressorjs/1.2.1/compressor.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>