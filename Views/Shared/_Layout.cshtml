<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 球球布丁的后花园</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/MyTechBlog.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-heart-fill text-danger me-2"></i>球球布丁的后花园
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
                    aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title fw-bold" id="offcanvasNavbarLabel">
                            <i class="bi bi-flower1 me-2" style="color: var(--brand-color);"></i>导航
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Posts" asp-action="Index">
                                    <i class="bi bi-journal-code me-1"></i> 技术博客
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-images me-1"></i> 猫咪相册
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-chat-quote me-1"></i> 碎碎念
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-archive me-1"></i> 归档
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">关于铲屎官</a>
                            </li>
                            
                                                <li class="nav-item ms-lg-3 mt-3 mt-lg-0">
                                                    <form class="d-flex" role="search" asp-controller="Posts" asp-action="Index" method="get">
                                                        <div class="input-group nav-search-group">
                                                            <input class="form-control border-0 bg-transparent shadow-none" type="search" name="search" placeholder="搜索..." aria-label="Search" value="@ViewData["CurrentSearch"]">
                                                            <button class="btn border-0 bg-transparent shadow-none text-secondary" type="submit">
                                                                <i class="bi bi-search"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </li>
                            <li class="nav-item ms-lg-3 mt-3 mt-lg-0">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <li><span class="dropdown-header">管理员</span></li>
                                            }
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">注销</a></li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary rounded-pill px-4" asp-controller="Account" asp-action="Login">登录</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- 增加顶部内边距，防止内容被 fixed navbar 遮挡 -->
    <div class="container-md flex-grow-1" style="max-width: 800px; padding-top: 80px;">
        <main role="main" class="pb-5"> @RenderBody()
        </main>
    </div>

    @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
    {
    <footer class="border-top text-muted bg-light mt-auto py-4">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 small">
                        &copy; 2025 - <strong>球球布丁的后花园</strong>
                        <br class="d-md-none"> <!-- 移动端换行 -->
                        <span class="mx-2 d-none d-md-inline">|</span>
                        <small>Powered by .NET 10 & ASP.NET Core</small>
                    </p>
                </div>

                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <a href="https://github.com/" target="_blank" class="text-secondary text-decoration-none me-4 transition-hover"
                        title="GitHub">
                        <i class="bi bi-github fs-5"></i>
                    </a>

                    <a href="mailto:zhuuchaofan@gmail.com" class="text-secondary text-decoration-none me-4 transition-hover"
                        title="联系我">
                        <i class="bi bi-envelope-fill fs-5"></i>
                    </a>

                    <a href="#" class="text-secondary text-decoration-none transition-hover"
                        title="RSS 订阅">
                        <i class="bi bi-rss-fill fs-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    }

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1060">
        <div id="liveToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-bold">
                    <!-- Message will be injected here -->
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- 图片压缩库 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/compressorjs/1.2.1/compressor.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>